{
    "name": "bandit-hire5/roulette-api",
    "version": "0.0.1",
    "description": "Roulette API",
    "repository": {
        "type": "git",
        "url": "https://github.com/bandit-hire5/roulette-api"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "node dist/index.js --service=roulette-api --activity=start",
        "pm2-start": "pm2-dev dist/index.js --service=roulette-api --activity=start",
        "start-container": "npm run migration:run && npm run special:migration:run && npm start",
        "build": "rimraf ./dist && npm run build-ts",
        "test": "node --max-old-space-size=2048 ./node_modules/.bin/jest -w 1 --forceExit --detectOpenHandles",
        "test:unit": "jest unit --forceExit --detectOpenHandles",
        "test:integration": "jest integration",
        "build-ts": "tsc && npm run replace-ts-paths",
        "replace-ts-paths": "tscpaths -p tsconfig.json -s ./src -o ./dist > /dev/null",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
        "lint-quite": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
        "lint-fix": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "special:migration:run": "node dist/index.js --service=roulette-api --activity=special-migrations",
        "migration:run": "node dist/index.js --service=roulette-api --activity=migrations",
        "migration:revert": "typeorm migration:revert"
    },
    "dependencies": {
        "@koa/cors": "^3.3.0",
        "class-validator": "^0.14.0",
        "cronofy": "^3.8.1",
        "dotenv": "^16.3.1",
        "inversify": "^5.0.1",
        "inversify-inject-decorators": "^3.1.0",
        "jsonwebtoken": "^9.0.0",
        "jwks-rsa": "^3.0.1",
        "koa": "^2.14.1",
        "koa-body": "^6.0.1",
        "koa-bodyparser": "^4.3.0",
        "koa-conditional-get": "^3.0.0",
        "koa-router": "^7.4.0",
        "koa2": "^2.0.0-alpha.7",
        "koa2-swagger-ui": "^5.7.0",
        "minimist": "^1.2.5",
        "node-schedule": "^2.1.1",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^5.1.6",
        "swagger-jsdoc": "^6.2.8",
        "typeorm": "0.3.0-rc.21",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "^5.0.1",
        "@types/jest": "^27.0.3",
        "@types/koa": "^2.11.0",
        "@types/koa__cors": "^3.3.0",
        "@types/koa-bodyparser": "^4.3.7",
        "@types/koa-conditional-get": "^2.0.0",
        "@types/koa-router": "^7.0.42",
        "@types/koa-static": "^4.0.2",
        "@types/minimist": "^1.2.0",
        "@types/node": "^8.0.29",
        "@types/node-fetch": "^2.6.3",
        "@types/node-schedule": "^2.1.0",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.3.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.3",
        "jest": "^29.4.3",
        "pm2": "^5.3.0",
        "prettier": "^2.0.0",
        "rimraf": "^3.0.0",
        "testcontainers": "^9.1.1",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.4.0",
        "tsc-watch": "^4.1.0",
        "tscpaths": "0.0.9",
        "typemoq": "^2.1.0",
        "typescript": "^4.5.4"
    },
    "overrides": {
        "fresh": "0.5.2",
        "glob-parent": "5.1.2",
        "semver": "7.5.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-quite",
            "pre-push": "npm test"
        }
    },
    "bin": {
        "start-service": "dist/index.js"
    }
}
